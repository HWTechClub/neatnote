{{template "base/head" .}}
<div class="content">
	{{if .invalid}}<div class="alert alert-red">
	<p class="alert-title">Invalid code</p>
	<p>The code you entered is invalid, make sure you use the latest code sent
	to you.</p></div>{{end}}
	<h2>Validation</h2>
	<p>You will now receive an email at {{.email}} with a code.</p>
	<form method="post">
		<div>
			<label for="code">Code:</label>
			<input type="text" id="code" name="code" required="1">
		</div>
		<br />
		<input type="hidden" name="_csrf" value="{{.csrf_token}}">
		<button type="submit" class="btn">Continue â†’</button>
	</form>
	<p><small>Wrong email or didn't receive the message? <a
	href="/cancel">Go back</a>.</small></p>
</div>
{{template "base/footer" .}}

