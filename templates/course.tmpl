{{template "base/head" .}}
<div class="content">
	{{template "partials/flash" .}}
	<p><a href="/">&lt; Go back</a></p>
	<h2>{{.Course.Name}} ({{.Course.Code}}) notes</h2>
	{{if not .Course.Locked}}<a href="/course/{{.Course.Code}}/post"
	class="btn">Create a new post</a>{{end}}
	<ul>
		{{range .Course.Posts}}
		<li><a href="/course/{{$.Course.Code}}/{{.PostID}}">{{.Title}}</a>
		<div class="meta">
			<p>0&iota; by {{if .Anonymous}}<i>{{.AnonName}}</i>{{else}}
			{{if .Poster.FullName}}{{.Poster.FullName}}{{else}}{{.Poster.Username}}{{end}}{{end}}
			{{.Created}} ago | {{.CommentsCount}} comments</p>
		</div>
		</li>
		{{end}}
	</ul>
</div>
{{template "base/footer" .}}
