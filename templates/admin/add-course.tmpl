{{template "base/head" .}}
<div class="content">
	<h2>Add course</h2>
	<form method="post">
		<div>
			<label for="coursecode">Course Code:</label>
			<input type="text" id="coursecode" name="coursecode" required="1">
		</div>
		<br />
		<div>
			<label for="coursename">Course Name:</label>
			<input type="text" id="coursename" name="coursename" required="1">
		</div>
		<br />
		<input type="hidden" name="_csrf" value="{{.csrf_token}}">
		<button type="submit" class="btn">Add course</button>
	</form>

</div>
{{template "base/footer" .}}

